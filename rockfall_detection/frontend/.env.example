# React Frontend Environment Configuration Template - FRONTEND ONLY
# ==================================================================
# Copy this file to .env and update the values for your deployment

# Application Settings
VITE_APP_TITLE=Rockfall Detection System
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development
VITE_MODE=standalone

# Feature Flags
VITE_ENABLE_LIVE_MONITORING=true
VITE_ENABLE_DEM_ANALYSIS=true
VITE_ENABLE_RISK_ASSESSMENT=true
VITE_ENABLE_DETECTION=true
VITE_ENABLE_DEBUG_MODE=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_AUTO_REFRESH_INTERVAL=5000

# Mock Data Configuration (Frontend Only)
VITE_ENABLE_MOCK_DATA=true
VITE_USE_STATIC_DATA=true
VITE_SIMULATE_REAL_TIME=true

# Notification Settings
VITE_NOTIFICATION_ENABLED=true
VITE_NOTIFICATION_SOUND=false
VITE_HIGH_RISK_THRESHOLD=75
VITE_NOTIFICATION_COOLDOWN=120000

# Camera Configuration - Add your Cloudinary URLs
VITE_CAMERA_ENABLED=true
VITE_CAMERA_REFRESH_RATE=30
VITE_CAMERA_EAST_URL=your-cloudinary-east-camera-url
VITE_CAMERA_WEST_URL=your-cloudinary-west-camera-url
VITE_CAMERA_NORTH_URL=your-cloudinary-north-camera-url

# Risk Assessment Settings
VITE_RISK_UPDATE_INTERVAL=5000
VITE_RISK_FORCE_HIGH_CHANCE=0.2
VITE_RISK_CALCULATION_MODE=enhanced

# Detection Settings
VITE_DETECTION_CONFIDENCE_THRESHOLD=0.7
VITE_DETECTION_DEMO_MODE=true

# Performance Settings
VITE_ENABLE_CACHE=false
VITE_DEBUG_PERFORMANCE=true

# Development Configuration Example:
# For local development with debug enabled:
# VITE_ENVIRONMENT=development
# VITE_ENABLE_DEBUG_MODE=true
# VITE_AUTO_REFRESH_INTERVAL=3000
# VITE_RISK_FORCE_HIGH_CHANCE=0.3

# Production Configuration Example:
# For production deployment:
# VITE_ENVIRONMENT=production
# VITE_ENABLE_DEBUG_MODE=false
# VITE_AUTO_REFRESH_INTERVAL=10000
# VITE_NOTIFICATION_COOLDOWN=300000
