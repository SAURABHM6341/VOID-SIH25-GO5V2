# React Frontend Environment Configuration - PRODUCTION
# ======================================================

# API Configuration - Production Deployment
VITE_API_BASE_URL=https://your-backend-domain.onrender.com
VITE_WS_BASE_URL=wss://your-backend-domain.onrender.com
VITE_SSE_BASE_URL=https://your-backend-domain.onrender.com

# Application Settings
VITE_APP_TITLE=Rockfall Detection System
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Feature Flags - Production Features
VITE_ENABLE_LIVE_MONITORING=true
VITE_ENABLE_DEM_ANALYSIS=true
VITE_ENABLE_RISK_ASSESSMENT=true
VITE_ENABLE_DEBUG_MODE=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_AUTO_REFRESH_INTERVAL=5000

# Camera Configuration
VITE_CAMERA_REFRESH_RATE=30
VITE_ENABLE_CAMERA_CONTROLS=true
VITE_MAX_CAMERA_RESOLUTION=1920x1080

# External APIs (Optional)
VITE_MAPBOX_TOKEN=
VITE_GOOGLE_MAPS_API_KEY=

# Production Settings - SSE Only
VITE_ENABLE_MOCK_DATA=false
VITE_API_TIMEOUT=30000
VITE_DEBUG_WEBSOCKET=false

# Connection Settings - SSE ONLY for Production
VITE_USE_SSE_ONLY=true
VITE_DISABLE_WEBSOCKET=true