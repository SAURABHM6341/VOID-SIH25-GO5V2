# React Frontend Environment Configuration
# ========================================

# API Configuration - Development
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000
VITE_SSE_BASE_URL=http://localhost:8000

# Application Settings
VITE_APP_TITLE=Rockfall Detection System
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Feature Flags - Development with Debug Features
VITE_ENABLE_LIVE_MONITORING=true
VITE_ENABLE_DEM_ANALYSIS=true
VITE_ENABLE_RISK_ASSESSMENT=true
VITE_ENABLE_DEBUG_MODE=true

# UI Configuration (Referenced in code)
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_AUTO_REFRESH_INTERVAL=5000

# Camera Configuration (Referenced in code)
VITE_CAMERA_REFRESH_RATE=30
VITE_ENABLE_CAMERA_CONTROLS=true
VITE_MAX_CAMERA_RESOLUTION=1920x1080

# External APIs (Optional - can be empty for now)
VITE_MAPBOX_TOKEN=
VITE_GOOGLE_MAPS_API_KEY=

# Development Settings - Enhanced for Local Development
VITE_ENABLE_MOCK_DATA=true
VITE_API_TIMEOUT=30000
VITE_DEBUG_WEBSOCKET=true

# Connection Settings - Deployment Configuration
VITE_USE_SSE_ONLY=true
VITE_DISABLE_WEBSOCKET=true
